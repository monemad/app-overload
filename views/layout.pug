include utils

doctype html
html
  head
      block head
        title="App Overload"
        link(rel='stylesheet' href='/stylesheets/reset.css')
        link(rel='stylesheet' href='/stylesheets/users.css')
        link(rel='stylesheet' href='/stylesheets/index.css')
        script(src="/javascripts/layout.js" type="module" defer)
  body
    div#nav-div
      nav#nav-bar
        a#nav-home-link(href='/')
          img#nav-logo(src="/images/app-logo.png", alt="")
        form#search-form
          input#search-bar(type='text' name='searchQuery' placeholder='Search here...')
          button#search-btn(type='submit') Search
        if locals.authenticated
          span#nav-span Welcome, #{locals.user.firstName}
          a#nav-prof-link(href='/users/profile'): img#nav-prof-pic(src="/images/default.png", alt="My Profile")
          button: a(href='/users/logout') Logout
        else
          button: a(href='/users/login') Login
          button: a(href='/users/signup') Sign Up
          button: a(href='/users/demo') Demo User
    div#sidebar-content
      div.sidenav
        a(class='homebtn', href='/') Home
        a(class='questionbtn' ,href='/questions') Questions
        a(class='userbtn', href='/users') Users
      block content
